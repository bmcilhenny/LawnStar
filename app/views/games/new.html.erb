<div id="white-text"><h1>Create a Game</h1>

<%= form_for @game do |f| %>
  <%= f.label "Choose a sport:" %>
  <%= f.collection_select :sport_id, Sport.all, :id, :name %><br>
  <br>
  <%= f.label "Choose an opponent:" %>
  <%= f.collection_select :opponent, @players, :id, :name %><br>
  <br>
  <%= f.label "Date:" %>
  <%= f.date_field :date %><br>
  <br>
  <%= f.label "Arena:" %>
  <%= f.text_field :arena %> </br>
  <br>
  <%= f.label "Your score:" %> <input type="text" name="your_score"> <%= f.label "Opponent's score:" %> <input type="text"  name="opponent_score">
  <%= f.submit class: "btn-danger" %>
<% end %><br>
</div>
