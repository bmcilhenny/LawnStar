<div id="white-text">
<br>
<br>
<br>

<h1 class="align-center">Lawn Sport: <%=@game.sport.name %></h1>
<br>
<li>When: <%= @game.date.strftime("%B %e, %Y") %></li>
<li>Where: <%=@game.arena %></li>
<li>You played: <%=@game.opponent_name.capitalize %></li><br>

<h3>Game Score</h3>
<h4>Game Summary: <%=@game.game_winner_or_loser_message %></h4>
<%@game.player_games.each do |pg| %>
  <li><%=pg.player.name.capitalize%>: <%=pg.score%></li>
<%end%>
<br>

<button class="btn-danger"><%= link_to "Go Back to Your Stats Bro", player_path(@current_player)%></button>
</div>
